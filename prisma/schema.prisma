// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  pass  String
  todos Todo[]

  @@map("user")
}

model Todo {
  id       Int    @id @default(autoincrement())
  todo     String
  author   User  @relation(fields: [authorId], references: [id])
  authorId Int

  @@map("todo")
}
